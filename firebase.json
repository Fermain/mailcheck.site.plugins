{
    "hosting": {
        "headers": [
            {
                "source": "**/*.@(js|jpg|jpeg|gif|png)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=691200"
                    }
                ]
            },
            {
                "source": "404.html",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=300"
                    }
                ]
            }
        ],
        "public": "__sapper__/export",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/sendMail",
                "function": "sendMail"
            },
            {
                "source": "/checkMail",
                "function": "checkMail"
            }
        ],
        "cleanUrls": true,
        "trailingSlash": false
    }
}
