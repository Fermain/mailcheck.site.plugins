{
  "hosting": [
    {
      "target": "mailcheck-landing",
      "headers": [
        {
          "source": "**/*.@(js|xml|jpg|jpeg|gif|webp|png|avif|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=691200"
            }
          ]
        },
        {
          "source": "404.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=300"
            }
          ]
        }
      ],
      "public": "build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/sendMail",
          "function": "sendMail"
        },
        {
          "source": "/api/checkMail",
          "function": "checkMail"
        },
        {
          "source": "/l/*",
          "function": "internalRedirect"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false
    },
    {
      "target": "email-functions",
      "rewrites": [
        {
          "source": "/handle-open-email",
          "function": "emailOpenHandler"
        },
        {
          "source": "/handle-email-link",
          "function": "emailLinkHandler"
        },
        {
          "source": "/postback",
          "function": "postbackLogger"
        }
      ]
    }
  ]
}
