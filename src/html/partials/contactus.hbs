<!--Contact us-->
<section id="contact-us-section" class="contact-us">
    <div class="container">
        <form id="contact-us" class="contact-form">
            <h2 class="title title-contact">contact us</h2>
            <input class="input" type="text" placeholder="Name" required>
            <input class="input" type="email" placeholder="Email" required>
            <textarea class="input input-message" placeholder="Message" required></textarea>
            <button class="btn btn-submit" type="submit">submit</button>
        </form>
    </div>
</section>

<div class="popup-container" id="popup-block">
    <div class="popup" id="popup-success">
        <span class="popup-close success" id="close-success"></span>
        <span class="popup-thanks">Thanks for filling out
            our form!</span>
        <p class="popup-text">We will look over your message and get back to you by tomorrow.
            Your friends at MailCheck!</p>
    </div>
    <div class="popup" id="popup-error">
            <span class="popup-close error" id="close-error"></span>
            <span class="popup-thanks">Something went wrong!</span>
            <p class="popup-text">Please try again later</p>
        </div>
</div>
